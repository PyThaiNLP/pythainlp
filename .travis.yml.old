language: python

dist: bionic

os:
- linux

python:
- '3.6'

#cache:
#  directories:
#    - ~/.cache/pip
#    - ~/nltk_data
#    - ~/pythainlp-data

before_install:
- sudo rm -f /etc/boto.cfg

install:
- pip install -U pip setuptools
- pip install -U "h5py>=2.10.0,<3" "tensorflow>=2.3.1,<3" deepcut
- pip install -r requirements.txt
- pip install .[full]
- pip install coverage coveralls

script:
- coverage run -m unittest discover

after_success:
- coveralls
